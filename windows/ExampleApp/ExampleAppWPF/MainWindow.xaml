<Window x:Class="ExampleAppWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExampleAppWPF"
        mc:Ignorable="d"
        Stylus.IsPressAndHoldEnabled="False"
        Title="MainWindow" Margin="0" KeyboardNavigation.DirectionalNavigation="Once" KeyboardNavigation.TabNavigation="None"
        MinWidth="1024"
        MinHeight="768"
        UseLayoutRounding="True">
        <Grid Background="Black" x:Name="MainGrid">
        <Image x:Name="MapHost" RenderOptions.BitmapScalingMode="Linear" RenderTransformOrigin="0.5,0.5" Stretch="Fill" Margin="0">
            <Image.RenderTransform>
                <ScaleTransform ScaleY="-1"/>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
