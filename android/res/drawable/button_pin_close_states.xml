<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/ui_border"/>
                    <stroke android:color="@color/transparent"/>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/button_close_on"/>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/ui_background"/>
                    <stroke android:color="@color/transparent"/>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/button_close_off"/>
            </item>
        </layer-list>
    </item>
</selector>
