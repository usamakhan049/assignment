<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_list_item"
    android:layout_width="212dp"
    android:layout_height="39dp"
	android:background="@drawable/submenu_pressed_states">
    
    <ImageView
        android:id="@+id/menu_list_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:contentDescription="@string/content_desc_tag_icon"
        android:scaleType="fitCenter"
        android:src="@drawable/icon1_aroundme" />

	    <TextView
	        android:id="@+id/menu_list_item_name"
	        android:layout_width="fill_parent"
	        android:layout_height="20dp"
	        android:layout_marginTop="4dp"
        	android:layout_marginLeft="42dp"
	        android:background="@android:color/transparent"
	        android:maxLines="1"
	        android:text=""
	        android:textAppearance="?android:attr/textAppearanceListItemSmall"
	        android:textColor="@color/table_search_text"
	        android:textSize="14sp" />
	
	     <TextView
	         android:id="@+id/menu_list_item_detail"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="42dp"
	         android:layout_marginTop="22dp"
	         android:background="@android:color/transparent"
	         android:maxLines="1"
	         android:text=""
	         android:ellipsize="end"
	         android:textAppearance="?android:attr/textAppearanceListItemSmall"
	         android:textColor="@color/table_search_detail_text"
	         android:textSize="11sp" />
	     
</RelativeLayout>