<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/initial_ux_intro_banner"
    android:layout_width="fill_parent"
    android:layout_height="144dp"
    android:layout_centerVertical="true"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:layout_centerInParent="true"
        android:background="@color/gold">
        
        <TextView
            android:id="@+id/welcome_intro_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="42sp"
            android:fontFamily="sans-serif-thin"
            android:text="@string/initial_ux_welcome_title"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/welcome_intro_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:layout_below="@id/welcome_intro_text"
            android:text="@string/initial_ux_welcome_description"/>
    </RelativeLayout>
</RelativeLayout>