<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  	xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
   	android:layout_width="wrap_content">
	
	<ImageView
		android:id="@+id/toggle_pinned_control_unpinned"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/button_pressed_colour_change"
	    android:src="@drawable/pin_add_states" />
	
	<ImageView
		android:id="@+id/toggle_pinned_control_pinned"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/button_pressed_colour_change"
	    android:src="@drawable/pin_remove_states" />

</RelativeLayout>